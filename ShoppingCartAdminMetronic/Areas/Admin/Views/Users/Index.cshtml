@model List<AppUser>

<a asp-area="Admin" asp-controller="Users" asp-action="Create" >Create</a>

<table class="table table-bordered">
	<tr class="bg-primary text-center text-white">
		<th>Id</th>
		<th>Name</th>
		<th>Email</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>

	@if (Model.Count == 0)
	{
		<tr>
			<td colspan="5">
				No Users
			</td>
		</tr>
	}
	else
	{
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.UserName</td>
				<td>@item.Email</td>
				<td>
					<a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
				</td>
				<td>
					<a asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	}
</table>
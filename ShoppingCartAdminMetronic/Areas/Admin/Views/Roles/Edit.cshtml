@model RoleViewModel


<h1>Edit Roles Members Role: @Model.Role.Name </h1>


<form asp-action="Edit">
	<h3>Non Members</h3>

	<input type="hidden" name="RoleName" value="@Model.Role.Name" />


	<table class="table table-bordered">
		@if (Model.NonMembers != null && Model.NonMembers.Count() == 0)
		{
			<tr>
				<td>
					All users are members
				</td>
			</tr>
		}
		else
		{
			foreach (AppUser user in Model.NonMembers)
			{
				<tr class="bg-primary text-center text-white">
					<td>
						@user.UserName
					</td>
					<td>
						<input type="checkbox" value="@user.Id" name="AddIds" />
					</td>
				</tr>
			}
		}
	</table>


	<h3>Members</h3>

	<table class="table table-bordered">
		@if (Model.Members != null && Model.Members.Count() == 0)
		{
			<tr>
				<td>
					No users are members
				</td>
			</tr>
		}
		else
		{
			foreach (AppUser user in Model.Members)
			{
				<tr class="bg-primary text-center text-white">
					<td>
						@user.UserName
					</td>
					<td>
						<input type="checkbox" value="@user.Id" name="DeleteIds" />
					</td>
				</tr>
			}
		}
	</table>
	<div class="form-group">
		<input type="submit" value="Edit" class="btn btn-primary" />
	</div>

</form>
<div>
	<a asp-action="Index">Back to List</a>
</div>